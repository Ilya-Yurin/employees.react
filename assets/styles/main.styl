*
  box-sizing border-box
  font-family 'Open Sans', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  margin 0
  padding 0
  height 100%
  background linear-gradient(45deg, rgba(0, 0, 0, 0) 48%, rgba(0, 0, 0, 0.1) 50%, rgba(0, 0, 0, 0) 52%), linear-gradient(-45deg, rgba(0, 0, 0, 0) 48%, rgba(0, 0, 0, 0.1) 50%, rgba(0, 0, 0, 0) 52%);
  background-size 5px 5px;

html
  margin 0
  padding 0
  height 100%


h1, h2, h3, h4, h5, h6
  font-family 'Open Sans', sans-serif
  font-weight bold

.emp-app
  height 100%
  display flex
  flex 1
  flex-direction column
  align-self stretch

  &__wrapper
    flex 1
    display flex
    flex-direction column
    align-self stretch
    align-content stretch
    justify-content stretch

  &__content
    flex 1
    display flex
    flex-direction row
    flex-wrap no-wrap
    align-self stretch
    align-content center
    justify-content space-between

  &__add
    background-color #fbfbfb
    display flex
    flex-flow column nowrap
    align-self stretch
    align-items center
    flex-grow 0
    padding-top 10px
    padding-bottom 10px
    border-bottom solid 1px rgba(15, 15, 15, .24)
    box-shadow 2px 0 3px 0 rgba(15, 15, 15, .24)

  &__add:hover
    background-color #eeeeee

  &__sidebar--footer
    background-color #fbfbfb
    display flex
    flex-grow 2
    flex-flow column nowrap
    align-items center
    align-self stretch
    box-shadow 2px 0 3px 0 rgba(15, 15, 15, .24)

  &__padding-0
    padding 0 0 0 0

.grey-fa-font
  font-size 35px
  color rgba(15, 15, 15, 0.62)

