.emp-add
  width 95%
  margin-right 5%
  height 100%
  box-shadow 0 2px 3px 2px rgba(15, 15, 15, .24)
  background-color #fbfbfb
  position relative

  &__close-button
    position absolute
    flex right
    top 25px
    right 25px

  &__container
    display flex
    padding-top 55px
    padding-right 100px

  &__container-left
    flex 20
    padding-left 15px
    width 100%
    height 100%

  &__container-form
    flex 80
    padding-left 10px

  &__row-input
    display flex
    flex-direction row
    flex-wrap wrap
    width 100%
    justify-content space-between

  &__row-button
    display flex
    flex-direction row
    flex-wrap wrap
    width 100%
    margin auto

  &__container-avatar
    margin auto
    width 150px
    height 100%

  &__avatar
    height 100%
    border: 1px solid #D2C9CC
    box-shadow: 2px 2px 2px 1px #D2C9CC

  &__profile-progress
    text-align center
    color #6b6b6b
    padding-top 10px

  &__save-button
    display flex
    flex-direction row
    width 100%
    margin auto
    justify-content flex-end






