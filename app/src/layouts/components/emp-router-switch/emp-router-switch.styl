.emp-info
  width 95%
  margin-right 5%
  height 100%
  box-shadow 0 2px 3px 2px rgba(15, 15, 15, .24)
  background-color #fbfbfb
  position relative

  &__close-button
    position absolute
    flex right
    top 25px
    right 25px

  &__container
    display flex
    padding-top 55px
    padding-right 55px

  &__container-left
    flex 20
    padding-left 15px
    width 100%
    height 100%

  &__container-detail
    flex 80
    padding-left 10px

  &__row
    display flex
    flex-direction row
    flex-wrap wrap
    width 100%
    align-items center
    margin 0 5px 20px 5px

  &__row-name
    margin-right 30px
    font-size 24px
    color #583441
    font-weight bold

  &__row-data
    font-size 16px
    color #583441
    font-weight bold

  &__row-text
    font-size 16px
    color #6f5760

  &__avatar
    height 150px
    width 150px
    margin auto
    border: 1px solid #D2C9CC
    box-shadow: 2px 2px 2px 1px #D2C9CC

  &__buttons
    display flex
    flex-direction row
    width 100%
    margin auto
    justify-content flex-end

  &__skills-tag
    font-size 14px
    padding 5px 15px 5px 15px
    margin 2px 5px 2px 0
    vertical-align middle
    border-radius 3px
    background-color #dbdbdb






