.emp-list-item
  background-color #fbfbfb
  position relative
  display flex
  flex-flow nowrap
  justify-content flex-start
  align-self stretch
  flex-grow 0
  border-bottom solid 1px rgba(15, 15, 15, .24)
  box-shadow 2px 0 3px 0 rgba(15, 15, 15, .24)
  cursor pointer

  &:hover
    background-color #eeeeee

  &__progress
    position absolute
    bottom 0
    left 0
    width 5px

  &__img
    flex 15
    align-self center
    text-align center
    padding 10px 0 10px 5px

  &__data
    flex 80
    align-self center
    padding 10px 5px 10px 0

  &__name
    font-size 20px
    font-weight bold
    color #0f0f0f
    word-break break-all

  &__position
    font-size 14px
    color #6b6b6b
    margin 5px 0 10px
    word-break break-all

  &__skills
    display flex
    flex-wrap wrap
    font-size 12px
    color #0EA99F

  &__skills-tag
    padding 3px 15px 3px 15px
    margin 2px 5px 2px 0
    vertical-align middle
    border-radius 3px
    font-size 12px
    background-color #dbdbdb

