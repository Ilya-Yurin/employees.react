.emp-list-item
  background-color #fbfbfb;
  display flex
  flex-flow column nowrap
  align-self stretch
  align-items center
  flex-grow 0
  border-bottom solid 1px rgba(15, 15, 15, .24)

  &__shadow
    background-color #fbfbfb
    display flex
    flex-flow column nowrap
    align-self stretch
    align-items center
    flex-grow 0
    border-bottom solid 1px rgba(15, 15, 15, .24)
    box-shadow 3px 0 3px 0 rgba(15, 15, 15, .24)
